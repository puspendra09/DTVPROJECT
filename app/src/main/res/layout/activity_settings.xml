<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#400A0707">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/b_back"
        android:background="#400A0707"
        android:src="@drawable/ic_arrow_back_black_24dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="bold"
        android:layout_marginTop="10dp"
        android:text="Settings"
        android:layout_marginLeft="130dp"
        android:textSize="20sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:id="@+id/ll_video_quality"
        android:layout_marginTop="30dp"
        android:background="@color/colorBlack">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video quality"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_video_quality"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:hint="Auto"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_subtitiles"
        android:background="@color/colorBlack">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitles"
            android:id="@+id/switch1"
            android:layout_marginTop= "30dp"
            android:checked="true"
            android:trackTint="@color/color_switchoff_button"
            android:thumbTint="@color/color_switch_button"
            android:layout_marginLeft="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_subtitles"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:hint="Auto"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_autoplay"
        android:background="@color/colorBlack">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:text="Autoplay videos in Play Feed"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:trackTint="@color/color_switchoff_button"
            android:thumbTint="@color/color_switch_button"
            android:checked="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_autoplay"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:hint="Auto"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
       >

    </LinearLayout>

</LinearLayout>